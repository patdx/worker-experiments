  "nx": {
    "targets": {
      "start": {
        "dependsOn": [
          "build"
        ]
      },
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ],
        "cache": true
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "pnpm vite build --watch",
            "pnpm vite build --ssr --watch",
            "wrangler pages dev",
            "open-cli http://127.0.0.1:8788/"
          ],
          "parallel": true,
          "cwd": "packages/cloudflare-pages-htmx"
        }
      }
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "nx"
    ]
  }
}
