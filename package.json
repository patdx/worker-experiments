    "@types/luxon": "3.4.2",
    "@types/node": "22.10.2",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "@vavite/multibuild": "5.1.0",
    "@vavite/multibuild-cli": "5.1.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "json5": "2.2.3",
    "nx": "20.3.0",
    "open-cli": "8.0.0",
    "postcss": "8.4.49",
