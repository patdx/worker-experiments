{
  "name": "cloudflare-pages-htmx",
  "x-type": "module",
  "version": "1.0.0",
  "description": "",
  "sideEffects": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nx start",
    "xx-dev": "nx dev",
    "x-dev": "pnpm build && wrangler pages dev ./dist/client --d1=DB --persist",
