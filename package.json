{
  "name": "cloudflare-pages-htmx",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "sideEffects": false,
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nx start",
    "xx-dev": "nx dev",
    "x-dev": "pnpm build && wrangler pages dev ./build/client --d1=DB --persist",
    "x-build": "nx exec -- vavite",
    "build": "nx exec -- react-router build",
    "deploy": "rm -rf dist && vavite && wrangler pages deploy",
    "start": "nx exec -- wrangler pages dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cloudflare/workers-types": "4.20241205.0",
    "@react-router/dev": "7.0.2",
    "@react-router/fs-routes": "7.0.2",
    "@rollup/plugin-inject": "5.0.5",
    "@tailwindcss/forms": "0.5.9",
    "@tailwindcss/typography": "0.5.15",
    "@types/luxon": "3.4.2",
    "@types/node": "22.10.1",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@vavite/multibuild": "5.1.0",
    "@vavite/multibuild-cli": "5.1.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.20",
    "json5": "2.2.3",
    "nx": "20.2.1",
    "open-cli": "8.0.0",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2",
    "vavite": "5.1.0",
    "vite": "6.0.3",
    "wrangler": "3.94.0"
  },
  "dependencies": {
    "@react-router/node": "7.0.2",
    "clsx": "2.1.1",
    "htmx.org": "2.0.1",
    "isbot": "^5",
    "luxon": "3.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-icons": "5.4.0",
    "react-router": "7.0.2"
  },
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
  "nx": {
    "targets": {
      "start": {
        "dependsOn": [
          "build"
        ]
      },
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ],
        "cache": true
      },
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "pnpm vite build --watch",
            "pnpm vite build --ssr --watch",
            "wrangler pages dev",
            "open-cli http://127.0.0.1:8788/"
          ],
          "parallel": true,
          "cwd": "packages/cloudflare-pages-htmx"
        }
      }
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "nx"
    ]
  }
}
